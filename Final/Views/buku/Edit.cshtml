@model Final.Models.tabel_buku

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <h2>Edit</h2>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>tabel_buku</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.id_buku)

                    <div class="form-group">
                        @Html.LabelFor(model => model.nama_buku, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nama_buku)
                            @Html.ValidationMessageFor(model => model.nama_buku)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.penerbit_buku, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.penerbit_buku)
                            @Html.ValidationMessageFor(model => model.penerbit_buku)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.stok_buku, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.stok_buku)
                            @Html.ValidationMessageFor(model => model.stok_buku)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        </div>
    </div>
</div>